# .env.example
# Copy this file to .env and update the values

# =============================================================================
# JANUS AUDIOBRIDGE CONFIGURATION (REQUIRED)
# =============================================================================
# External Janus AudioBridge server configuration
EXTERNAL_JANUS_IP=192.168.1.100
EXTERNAL_JANUS_PORT=8088

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Environment
NODE_ENV=development

# Internal application port (keep as 3000)
PORT=3000

# External host port (change this for multiple instances)
# Instance 1: HOST_PORT=3000
# Instance 2: HOST_PORT=3001 
# Instance 3: HOST_PORT=3002
HOST_PORT=3000

# Logging
LOG_LEVEL=debug

# Processing
MAX_CONCURRENT_ENCODING=2

# =============================================================================
# DOCKER PRODUCTION PATHS (Production only)
# =============================================================================
# These paths will be created on the host system for production deployment
PRODUCTION_DATA_PATH=/opt/radio-station/data